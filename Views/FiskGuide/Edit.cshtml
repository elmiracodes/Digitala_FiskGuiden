@model Digitala_FiskGuiden.Models.Fisk

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Fisk</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FiskId" />
            <div class="form-group">
                <label asp-for="Art" class="control-label"></label>
                <input asp-for="Art" class="form-control" />
                <span asp-validation-for="Art" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fakta" class="control-label"></label>
                <input asp-for="Fakta" class="form-control" />
                <span asp-validation-for="Fakta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KlassId" class="control-label"></label>
                <select asp-for="KlassId" class="form-control" asp-items="ViewBag.KlassId"></select>
                <span asp-validation-for="KlassId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Spara" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Gå tillbaka</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
