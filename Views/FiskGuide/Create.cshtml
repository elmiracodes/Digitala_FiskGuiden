@model Digitala_FiskGuiden.Models.Fisk

@{
    ViewData["Title"] = "Create";
}
<!DOCTYPE html>
<html>
<head>
    <link href="~/css/MinStil.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

</head>
<body>
    <h1>Fiskguide</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Art" class="control-label"></label>
                    <input asp-for="Art" class="form-control" />
                    <span asp-validation-for="Art" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Fakta" class="control-label"></label>
                    <input asp-for="Fakta" class="form-control" />
                    <span asp-validation-for="Fakta" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="KlassId" class="control-label"></label>
                    <select asp-for="KlassId" class="form-control" asp-items="ViewBag.KlassId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Skapa" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Tillbaka</a>
    </div>
</body>
</html>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
