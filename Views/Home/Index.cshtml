@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html>
<head>
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>

    .column {
    float: left;
    width: 33.33%;
    padding: 5px;
    }

    /* Clearfix (clear floats) */
    .row::after {
    content: "";
    clear: both;
    display: table;
    }

    a.navbar-brand {
    white-space: normal;
    text-align: center;
    word-break: break-all;
    }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-sm bg-success navbar-dark">
        <a class="navbar-brand" href="#">Digitala Fiskguiden</a>  


        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                <li>@Html.ActionLink("Hem", "Index", "Home")</li> &nbsp;&nbsp; &nbsp;&nbsp;
                <li>@Html.ActionLink("Fiskguide", "Index", "FiskGuide")</li> &nbsp;&nbsp; &nbsp;&nbsp;
                <li>@Html.ActionLink("Klasser", "Index", "Klasser")</li>
            </ul>
        </div>
    </nav>

    <div class="jumbotron text-center">
        <h1 class="display-4">Digitala fiskguiden</h1>
        <p>Här hittar du fakta om olika fiskarter och fiskrecept</p>
    </div>

    <div class="row">
        <div class="column">
            <img src="~/MinaBilder/ABBORE.png" alt="Abborre" width="334" height="236">
        </div>

        <div class="column">
            <img src="~/MinaBilder/laxrecept.jpg" alt="LaxELaGott" width="334" height="236">
        </div>

        <div class="column">
            <img src="~/MinaBilder/trafikljus_fiskguide_start_2.jpg" alt="WWs" width="334" height="236">
        </div>

    </div>

    <div class="row">
        <div class="col-md-4">
            <h2>Digital fiskguide</h2>
            <p>Lär dig om fiskarter här </p>
            <p> @Html.ActionLink("Fiskguide", "Index", "FiskGuide") &raquo; </p>
        </div>
        <div class="col-md-4">
            <h2>Enkla fiskrecept</h2>
            <p>Laga goda fiskrecept på nolltid </p>
          <p><a class="btn btn-default" href="https://www.tasteline.com/recept/fisk/"> Recept &raquo;</a></p>
        </div>
        <div class="col-md-4">
            <h2>WWs konsumentguide</h2>
            <p>Gör mer miljövänliga köp av fisk och skaldjur</p>
            <p><a class="btn btn-default" href="https://fiskguiden.wwf.se/">Konsumentguide  &raquo;</a></p>

        </div>
    </div>

</body>
</html>